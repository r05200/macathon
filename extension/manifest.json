{
  "manifest_version": 3,
  "name": "Privacy Shield - Tracker Monitor",
  "version": "0.2.0",
  "description": "Monitor cookies, detect trackers, and control your privacy across the web",
  
  "permissions": [
    "cookies",
    "storage",
    "tabs",
    "activeTab",
    "webRequest",
    "declarativeNetRequest",
    "alarms"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Privacy Shield"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
  
  
}
